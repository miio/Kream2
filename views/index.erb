<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
		<link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
		<title>Sockwaz Alpha</title>
		<script src="http://js.pusher.com/1.11/pusher.min.js" type="text/javascript"></script>
		<script type="text/javascript">
		// Enable pusher logging - don't include this in production
		//Pusher.log = function(message) {
		//	if (window.console && window.console.log) window.console.log(message);
		//};

		// Flash fallback logging - don't include this in production
		//WEB_SOCKET_DEBUG = true;

		var pusher = new Pusher('<%= @pusher_key %>');
		var channel = pusher.subscribe('broadcast');
		channel.bind('an_event', function(data) {
				data = eval(data);
				$('#timeline').prepend($('<p>').append(data.text).fadeIn('normal'));
		});
		</script>

		<style type="text/css">
		#timeline {
			margin: 50px 10px 0;
		}
		#timeline p {
			border: 1px solid #ddd;
		}
		</style>
	</head>
<body>
		<div class="topbar">
			<div class="fill">
				<div class="container">
					<h3><a href="#">Kream</a></h3>
					<ul class="nav">
						<li class="active"><a href="#timeline">Timeline</a></li>
						<li><a href="#list">Lists</a></li>
						<li><a href="#contact">Ustream</a></li>
					</div>
				</div>
			</div>

			<div id="timeline">
				<p>ダミーのダミー</p>
			</div>
		</body>
	</html>


